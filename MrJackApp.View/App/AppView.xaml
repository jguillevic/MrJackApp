<UserControl x:Class="MrJackApp.View.App.AppView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="AppResDic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Background>
        <ImageBrush ImageSource="pack://application:,,,/MrJackApp.Resource;component/Image/AppBackground.jpg" Stretch="UniformToFill"/>
    </UserControl.Background>


    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</UserControl>
