<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CommonTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/MrJackApp.Resource;component/Font/OldLondon.ttf#Old London"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource CommonTextStyle}"/>

    <Style x:Key="CommonBigTextStyle" TargetType="TextBlock" BasedOn="{StaticResource CommonTextStyle}">
        <Setter Property="FontSize" Value="40"/>
    </Style>

</ResourceDictionary>