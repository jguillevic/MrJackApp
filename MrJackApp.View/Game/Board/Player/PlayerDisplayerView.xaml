<UserControl x:Class="MrJackApp.View.Game.Board.Player.PlayerDisplayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:PlayerViewModel="clr-namespace:MrJackApp.ViewModel.Game.Board.Player;assembly=MrJackApp.ViewModel">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text=">Vous êtes "/>
        <TextBlock>
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Kind}" Value="{x:Static PlayerViewModel:PlayerKind.Jack}">
                            <Setter Property="Text" Value="Jack"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Kind}" Value="{x:Static PlayerViewModel:PlayerKind.Inspector}">
                            <Setter Property="Text" Value="l'inspecteur"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </StackPanel>
</UserControl>
