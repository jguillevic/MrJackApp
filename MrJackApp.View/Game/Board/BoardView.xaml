<UserControl x:Class="MrJackApp.View.Game.Board.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:TileView="clr-namespace:MrJackApp.View.Game.Board.Tile"
             xmlns:CharacterView="clr-namespace:MrJackApp.View.Game.Board.Character"
             xmlns:TurnView="clr-namespace:MrJackApp.View.Game.Board.Turn"
             xmlns:CardView="clr-namespace:MrJackApp.View.Game.Board.Card"
             xmlns:NotifierView="clr-namespace:MrJackApp.View.Game.Board.Notifier"
             xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:CommonConverter="clr-namespace:MrJackApp.Converter.Common;assembly=MrJackApp.Converter"
             x:Name="UserControl">
    <UserControl.Resources>
        <CommonConverter:BoolToVisibilityConverter x:Key="BoolToVisConverter" FalseValue="Hidden"/>
    </UserControl.Resources>
    
    <Interactivity:Interaction.Triggers>
        <Interactivity:EventTrigger EventName="Loaded">
            <Interactivity:InvokeCommandAction Command="{Binding StartGameCommand}"/>
        </Interactivity:EventTrigger>
    </Interactivity:Interaction.Triggers>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <TileView:TilesDisplayerView Visibility="{Binding ElementName=UserControl, Path=DataContext.IsTilesDisplayerReady, Converter={StaticResource BoolToVisConverter}}" 
                                             DataContext="{Binding TilesDisplayer}"/>

            <CharacterView:CharactersDisplayerView Visibility="{Binding ElementName=UserControl, Path=DataContext.IsCharactersDisplayerReady, Converter={StaticResource BoolToVisConverter}}" 
                                                       DataContext="{Binding CharactersDisplayer}"/>
        </Grid>

        <TurnView:TurnSchedulerView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                    DataContext="{Binding TurnScheduler}" 
                                    Visibility="{Binding ElementName=UserControl, Path=DataContext.IsTurnSchedulerReady, Converter={StaticResource BoolToVisConverter}}" 
                                    Margin="0 20 0 20"/>

        <CardView:CharacterCardsDisplayerView Grid.Row="0" Grid.Column="1" DataContext="{Binding CharacterCardsDisplayer}"/>

        <NotifierView:NotifierView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="2" DataContext="{Binding Notifier}" HorizontalContentAlignment="Stretch" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
