<UserControl x:Class="MrJackApp.View.Sound.Effect.EffectPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Extension="clr-namespace:MrJackApp.View.Sound.Common"
             xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <MediaElement LoadedBehavior="Manual" 
                  Volume="{Binding Volume}" 
                  Source="{Binding Source}"
                  Extension:MediaElementExtension.IsPlaying="{Binding IsPlaying}">
        <Interactivity:Interaction.Triggers>
            <Interactivity:EventTrigger EventName="MediaOpened">
                <Interactivity:InvokeCommandAction Command="{Binding PlayCommand}"/>
            </Interactivity:EventTrigger>
        </Interactivity:Interaction.Triggers>
    </MediaElement>
</UserControl>
