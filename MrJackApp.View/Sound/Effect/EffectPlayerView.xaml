<UserControl x:Class="MrJackApp.View.Sound.Effect.EffectPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Extension="clr-namespace:MrJackApp.View.Sound.Common">
    <MediaElement LoadedBehavior="Manual" 
                  Volume="{Binding Volume}" 
                  Source="{Binding Source}" 
                  Extension:MediaElementExtension.Position="{Binding Position}" 
                  Extension:MediaElementExtension.IsPlaying="{Binding IsPlaying}"/>
</UserControl>
